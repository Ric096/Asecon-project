<style>

  footer {
    height: 300px;
    width: 100%;
    /* background-color: rgb(24, 23, 23); */
    background-color: var(--downriver-950);
    color: rgb(243, 241, 241);
 
  }

  .footer-section {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
  }

  .mask {
		width: 100px;
		height: 100px;
		margin: 40px 0 0 50px;
	}

	.logo {
		width: 100%;
		height: 100%;
		aspect-ratio: 3/2;
		object-fit: contain;
  
  }

  .footer-nav {
    padding-right: 200px;
  }

  ul {
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
    width: 200px;
    height: 100px;
    margin: 40px 50px 0 0;
    /* padding-right: 200px; */

  }

  li {
    list-style: none;
    text-align: left;

  }

  a {
    text-decoration: none;
    color: white;
    transition-property: color, letter-spacing;
    transition-duration: 400ms;
  }

  a:hover {
    color: var(--downriver-400);
    letter-spacing: 2px;
  }

  .footer-nav::after {
    content: "";
    width: 70%;
    height: 2px;
    background-color:white;
    color: white;
    display: block;
  }

  p {
    display: inline-block;
    /* align-items: center;
    justify-content: center; */
    /* width: 300px; */
    /* margin-top: 30px; */
    margin: 100px 10px 0 50px;
    text-align:right;

  }

  .linkedin {
    margin-left: 5px;
    color:white;
    text-decoration: underline;
    font-style: italic;
    cursor: pointer;
  }

  .linkedin:hover {
    letter-spacing: normal;
  }

</style>