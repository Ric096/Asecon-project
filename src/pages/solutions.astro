---
import  Layout  from '../layouts/Layout.astro'

type Id = `${string}-${string}-${string}-${string}-${string}`;

interface Services {
  id: Id,
  title: string,
  description:string,
  additionalInfo?:string,
  image: string
}

const services:Array<Services> = [
  {
    id: crypto.randomUUID(),
    title: "Supervición de Proyectos de Construcción",
    description: "Dirigimos y supervisamos las fases clave del proceso constructivo, asegurando la metodología adecuada, cumplimiento de plazos, gestión de presupuestos, contratación eficaz y gestión de costos de los proyectos.",
    additionalInfo: "Ofrecemos respaldo logístico, administrativo y humano para garantizar el éxito en cada etapa del proyecto.",
    image: ""
  },
  {
    id:crypto.randomUUID(),
    title: "Acompañamiento y Desarrollo",
    description:"Brindamos orientación en la viabilidad de llevar a cabo obras y proyectos de inversión de diversa naturaleza, analizando minuciosamente todos los aspectos relevantes para posteriormente concebir y ejecutar el proyecto de manera exitosa.",
    // additionalInfo: "",
    image: ""
  },
  {
    id: crypto.randomUUID(),
    title: "Supervición de Progesos en Obras",
    description: "Ofrecemos un servicio completo de supervisión en diversas fases de los proyectos de construcción, asegurando un seguimiento regular de los trabajos de acuerdo con los plazos y especificaciones técnincas",
    image: ""
  },
  {
    id: crypto.randomUUID(),
    title: "Diseño y Desarrollo de Proyectos",
    description: "Creamos esquemas iniciales y proyectos adaptados a las demandas específicas de nuestros clientes y las tendencias del mercado.",
    image: ""
  },
  {
    id: crypto.randomUUID(),
    title: "Ejecución de Obras",
    description: ": Llevamos a cabo proyectos de construcción civil cumpliendo rigurosamente con altos estándares de calidad y seguridad.",
    additionalInfo: "Satisfacemos las necesidades y expectativas de nuestros clientes, aprovechando herramientas y sistemas de gestión que nos posibilitan la óptima utilización de recursos",
    image: ""
  }
]

---
<Layout title='Soluciones'>
  <h2 class="second-title">SERVICIOS</h2>

  <section class="service-container">
    <h3>Que te ofrecemos</h3>
    <article class="services1">
      <img src="" alt="imagen del servicio"/>
      <h4>titulo 1</h4>
      <p>{services[0].description}</p>
    </article>
    <article class="services2">
      <img src="" alt="imagen del servicio"/>
      <h4>titulo 2</h4>
      <p>descripcion</p>
    </article>
    <article class="services3">
      <img src="" alt="imagen del servicio"/>
      <h4>titulo 3</h4>
      <p>descripcion</p>
    </article>
    <article class="services4">
      <img src="" alt="imagen del servicio"/>
      <h4>titulo 4</h4>
      <p>descripcion</p>
    </article>
    <article class="services5">
      <img src="" alt="imagen del servicio"/>
      <h4>titulo 5</h4>
      <p>descripcion</p>
    </article>
  </section>
  
</Layout>

<style>

 h2{ 
  background-image: linear-gradient(rgba(58, 56, 56, 0.7), rgba(0,0,0,0.7)), url(https://plus.unsplash.com/premium_photo-1661335257817-4552acab9656?w=1200&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjV8fHBsYW5vcyUyMGFycXVpdGVjdG9uaWNvc3xlbnwwfHwwfHx8MA%3D%3D);
  background-repeat: no-repeat;
  background-position: center;
  background-attachment: fixed;
 } 

.service-container {
  display: grid;
  /* grid-auto-rows: 1fr; */
  grid-template-areas: "title title title"
                        "services1 services2 services3"
                        "services4 . services5";
  grid-template-columns: 1fr 1fr 1fr;
  grid-template-rows: 180px 40% 40%;
  gap: 10px;
  /* height: 500px; */
}

/* .services {
  border: 1px solid black;
  width: 200px;
  height: 300px;
} */




.services1 {
  grid-area: services1;
  border: 1px solid black;
}
.services2 {
  grid-area: services2;
}
.services3 {
  grid-area: services3;
}
.services4 {
  grid-area: services4;
}
.services5 {
  grid-area: services5;
}

.full-width {
  grid-column: 1/-1;
}

h3{
  border: 1px solid red;
  grid-area: title;

}


</style>