---
import Layout from "../../layouts/Layout.astro";

---


<Layout title="Sobre Nosotros!">
  <section class="about-us-section">
    <div class="about-us-header">
      <h2>ASECON S.A. </h2>
      <p>Soluciones Arquitectonicas.</p>
    </div>
    <h3>Sobre Nosotros</h3>

  </section>
  
</Layout>


<style>
  

  .about-us-header {
    background-image: linear-gradient(rgba(0,0,0,0.5), rgba(200,200,200,0.4)),url(https://images.pexels.com/photos/40723/silhouettes-people-worker-dusk-40723.jpeg?auto=compress&cs=tinysrgb&w=1200);
    background-repeat: no-repeat;
    background-position: center;
    width: 100%;
    height: 200px;
    margin: 0;
  }

  h2 {
    font-size: 30px;
    margin-left: 50px;
    padding-top: 60px;
    color: var(--white-color);
  }

  p {
    margin: 0 0 0 60px;
    line-height: 0.5;
    color: white;
  }

  h3{
    font-size: 30px;
    text-align: center;
  }

  h3::after {
    content: " ";
    display: block;
    margin: 10px auto;
    background-color: var(--downriver-700);
    width:600px;
    height: 4px;
    border-radius: 4px;
  }


</style>